<%load_rates %>
<script type="text/javascript">
jQuery(document).keyup('.sum', function(a) {
var sum = jQuery('.sum').val();
var totalUSDBYR = sum * <%= exchange_purchase('USD','BYR') %>;
var totalEURBYR = sum * <%= exchange_purchase('EUR','BYR') %>;
var totalRUBBYR = sum * <%= exchange_purchase('RUB','BYR') %>;
jQuery(".totalUSDBYR").val(totalUSDBYR);
jQuery(".totalEURBYR").val(totalEURBYR);
jQuery(".totalRUBBYR").val(totalRUBBYR);
jQuery(".sum").val(sum);

});
</script>
